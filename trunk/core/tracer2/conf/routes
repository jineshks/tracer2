# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           				controllers.Application.index()

POST    /api/tracer.com/v1/login									controllers.UserController.login()
POST   /api/tracer.com/v1/addProject            				controllers.UserController.addProject()
POST   /api/tracer.com/v1/addUserToProject            		controllers.UserController.addUserToProject()
POST   /api/tracer.com/v1/inviteUser            					controllers.UserController.inviteUser()
POST   /api/tracer.com/v1/registration            				controllers.UserController.registration()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
